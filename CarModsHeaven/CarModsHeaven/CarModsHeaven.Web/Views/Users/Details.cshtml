@using CarModsHeaven.Web.Models.UsersList

@model UserViewModel

@{
    ViewBag.Title = @Model.UserName + " - Car Mods Heaven";
}

<div class="row jumbotron">
    <h2>@Model.FullName's projects</h2>
    <div class="row">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-4">
                <h3>@Html.ActionLink(@project.Title, "Details", "Projects", new { id = project.Id }, new { })</h3>
                <h4>@project.CarBrand @project.CarModel @project.CarYear</h4>
                <ul>
                    <li>@project.ModificationsType</li>
                    <li>Posted On: @Html.DisplayFor(x => project.CreatedOn)</li>
                </ul>
            </div>
        }
    </div>
</div>