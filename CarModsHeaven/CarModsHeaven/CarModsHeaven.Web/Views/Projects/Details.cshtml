@using CarModsHeaven.Web.Models.ProjectsList
@using Microsoft.AspNet.Identity;

@model ProjectDetailsViewModel

@{
    ViewBag.Title = @Model.Title + " - Car Mods Heaven";
}

<div class="row jumbotron">
    <div class="col-md-4">
        <h2>@Model.Title</h2>
        <h3>
        @Html.DisplayFor(project => project.CarBrand)
        @Html.DisplayFor(project => project.CarModel)
        (@Html.DisplayFor(project => project.CarYear))
        </h3>
        <ul>
            <li>Posted On: @Html.DisplayFor(project => project.CreatedOn)</li>
            <li>Modifications Type: @Html.DisplayFor(project => project.ModificationsType)</li>
            <li>Modifications List: @Html.DisplayFor(project => project.ModificationsList)</li>
            <li>Owner: @Html.DisplayFor(project => project.Owner.UserName)</li>
        </ul>

        @if (User.Identity.GetUserId() == Model.Owner.Id)
        {
            @Html.ActionLink("Edit", "EditProject", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "DeleteProject", new { id = Model.Id }, new { @class = "btn btn-danger" })
        }
    </div>
</div>
<div class="jumbotron">
    <div id="disqus_thread"></div>
</div>


@Scripts.Render("~/bundles/disqus")
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>