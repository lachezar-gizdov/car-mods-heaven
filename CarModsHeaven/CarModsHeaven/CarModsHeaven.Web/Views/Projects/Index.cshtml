@using CarModsHeaven.Web.Models.ProjectsList;
@using X.PagedList.Mvc;

@model X.PagedList.IPagedList<ProjectDetailsViewModel>

@{
    ViewBag.Title = "Projects - Car Mods Heaven";
}

<div class="row jumbotron">
    <div>
        @Html.ActionLink("Add Project", "AddProject", null, new { }, new { @class = "btn btn-success" })
        @Ajax.ActionLink(
       "Sort By Date",
       "GetProjects",
       "Projects",
       new { pattern = "date" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )
        @Ajax.ActionLink(
       "Sort By Car Brand",
       "GetProjects",
       "Projects",
       new { pattern = "brand" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )
        @Ajax.ActionLink(
       "Sort By Project Title",
       "GetProjects",
       "Projects",
       new { pattern = "title" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )
        <div id="projects">
            @Html.Partial("_GetProjectsPartial", Model)
        </div>
    </div>
</div>