@{
    ViewBag.Title = "Projects - Car Mods Heaven";
}

<p class="lead">Here you can browse, comment and share other people's projects.</p>


<div class="row">
    <div>
        @Html.ActionLink("Add Project", "AddProject", null, new { }, new { @class = "btn btn-success" })

        @Ajax.ActionLink(
       "Sort By Date",
       "GetProjects",
       "Projects",
       new { sortBy = "date" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )

        @Ajax.ActionLink(
       "Sort By Car Brand",
       "GetProjects",
       "Projects",
       new { sortBy = "brand" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )

        @Ajax.ActionLink(
       "Sort By Project Title",
       "GetProjects",
       "Projects",
       new { sortBy = "title" },
       new AjaxOptions()
       {
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "projects"
       },
       new { @class = "btn btn-primary" }
       )
    </div>
    <div id="projects"></div>
</div>